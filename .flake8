[flake8]
ignore = C101,D403,F403,F405,I100,I201,W503,W504
exclude =
    .git,
    __pycache__,
    venv
filename = *.py
accept-encodings = utf-8
inline-quotes = single
max-complexity = 12
max-linenumber = 500
max-line-length = 119
multiline-quotes = double
per-file-ignores =
    musicapi/settings/templates/settings.dev.py:F821
    musicapi/settings/templates/settings.unittests.py:F821
    musicapi/settings/post.py:F821
